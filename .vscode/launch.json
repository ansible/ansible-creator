{
  "version": "0.2.0",
  "configurations": [
    // Run testing debugging in the terminal so the workspace venv is used
    {
      "name": "Debug tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "console": "integratedTerminal"
    },
    // Configuration for pure debugging (use args and cwd attributes accordingly)
    {
      "name": "Debug subcommand: init",
      "type": "debugpy",
      "request": "launch",
      "module": "ansible_creator",
      "args": [
        "init",
        "playbook",
        "testns.testname",
        "/home/user/..path/to/your/new_playbook_project"
      ],
      "cwd": "${workspaceFolder}/src",
      "justMyCode": false
    },
    {
      "name": "Debug subcommand: add",
      "type": "debugpy",
      "request": "launch",
      "module": "ansible_creator",
      "args": [
        "add",
        "plugin",
        "action",
        "action_1",
        "/Users/shamishr/Ansible/test-stuff/my_coll_proj"
      ],
      "cwd": "${workspaceFolder}/src",
      "justMyCode": false
    }
  ]
}
