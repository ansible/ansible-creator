---
version: 3

images:
  base_image:
    name: quay.io/fedora/fedora:41

dependencies:
  ansible_core:
    package_pip: ansible-core

  ansible_runner:
    package_pip: ansible-runner

  python:
    - boto3
    - botocore

  galaxy:
    collections:
      - name: cloud.aws_ops
      - name: amazon.aws

additional_build_steps:
  append_base: |
    RUN yum install -y git
